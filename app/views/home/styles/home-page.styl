#page-container
  position: fixed
  top: 0px
  left: 0px
  height: 100%
  width: 100%
  overflow: hidden
  background: #000

  .list
    position: absolute
    width: 100%

    section
      background: #f6f6f6
      width: 100%
      height: 100%
      overflow: hidden
      position: relative

      img
        height: 100%
        width: 100%

      h1
        position: absolute
        bottom: 50px
        right: 80px
        font-size: 60px
        font-weight: 700
        color: red

