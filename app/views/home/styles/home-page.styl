#page-container
  position: fixed
  top: 0px
  left: 0px
  height: 100%
  width: 100%
  overflow: hidden
  background: #000

  .list.stop
    .operate
      display: block
  .list
    position: absolute
    width: 100%
    .operate
      text-align: center
      position: absolute
      display: none
      top: 60%
      left: 0
      height: 100px
      width: 100%
      .btn-lg
        font-size: 100px
      .btn-lg.ok
        margin-right: 100px
    section
      background: #f6f6f6
      width: 100%
      height: 100%
      overflow: hidden
      position: relative

      img
        height: 100%
        width: 100%

      h1
        display: none
        position: absolute
        bottom: 50px
        right: 80px
        font-size: 60px
        font-weight: 700
        color: red

